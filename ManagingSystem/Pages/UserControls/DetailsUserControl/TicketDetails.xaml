                <Button
                    x:Name="SaveButton"
                    Content="Save"
                    Width="50"
                    Click="SaveButton_Click"/>
                <Button
                    x:Name="EditButton"
                    Content="Edit"
                    Width="50"
                    Click="EditButton_Click"/>
                <Button
                    x:Name="DeleteButton"
                    Content="Delete"
                    Width="50"
                    Click="DeleteButton_Click"/>
            </StackPanel>
            <StackPanel
                Margin="0 0 0 0"
                Orientation="Horizontal"
                Grid.Row="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Left">
                <Label
                    Padding="30"
                    Foreground="WhiteSmoke"
                    Background="#2D4D5E"
                    FontSize="52"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE90D;"/>
                <Grid
                    Margin="25 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel
                        Orientation="Horizontal"
                        Grid.Row="0">
                        <TextBox
                            Text="TicketName"
                            FontSize="18"
                            Margin="5"
                            x:Name="SelectedTicketName"
                            Width="250"
                            IsEnabled="False"/>
                    </StackPanel>
                    <Label
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        FontSize="18"
                        Grid.Row="1"
                        Content="Informacje"/>
                </Grid>
            </StackPanel>
            <StackPanel
                    Grid.Row="2"
                    Orientation="Horizontal"
                    Background="#2D4D5E">
                <Label
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="WhiteSmoke"
                        FontSize="24"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE723;"
                        Margin="35 0"/>
                <Label
                        Foreground="WhiteSmoke"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Content="Cena:"/>
                <TextBox
                        x:Name="SelectedTicketPrice"
                        VerticalAlignment="Center"
                        FontSize="24"
                    Width="100"
                    IsEnabled="False"/>
            </StackPanel>
            <StackPanel
                    Grid.Row="3"
                    Orientation="Horizontal">
                <Label
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="WhiteSmoke"
                        FontSize="24"
                        Content="%"
                        Margin="35 0"/>
                <Label
                        Foreground="WhiteSmoke"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Content="Ulga:"/>
                <TextBox
                        x:Name="SelectedTicketRelief"
                        VerticalAlignment="Center"
                        FontSize="24"
                    Width="100"
                    IsEnabled="False"/>
            </StackPanel>
            <StackPanel
                    Grid.Row="4"
                    Orientation="Horizontal"
                    Background="#2D4D5E">
                <Label
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="WhiteSmoke"
                        FontSize="24"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE8BF;"
                        Margin="35 0"/>
                <Label
                        Foreground="WhiteSmoke"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Content="Długość(dni.hh:mm:ss):"/>
                <TextBox
                        x:Name="SelectedTicketDuration"
                        VerticalAlignment="Center"
                        FontSize="24"
                    Width="200"
                    IsEnabled="False"/>
            </StackPanel>
            <StackPanel
                    Grid.Row="5"
                    Orientation="Horizontal">
                <Label
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="WhiteSmoke"
                        FontSize="24"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE8BF;"
                        Margin="35 0"/>
                <Label
                        Foreground="WhiteSmoke"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Content="Typ biletu:"/>
                <ComboBox
                        x:Name="SelectedTicketType"
                        VerticalAlignment="Center"
                        FontSize="18"
                    Width="200"
                    IsEnabled="False">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Label
                                Content="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
