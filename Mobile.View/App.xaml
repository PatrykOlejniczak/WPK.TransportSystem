<Application
    x:Class="Mobile.View.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="using:Mobile.View"
    xmlns:config="using:Mobile.View.Config"
    xmlns:converters="using:Mobile.View.Converters"
    RequestedTheme="Light">

    <Application.Resources>

        <config:ViewModelLocator x:Key="ViewModelLocator" />
        
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
        <converters:EmptyListToVisibityConverter x:Key="EmptyListToVisibilityConverter"/>
        <converters:TakeLastElementConverter x:Key="TakeLastElementConverter"/>
        <converters:IndexFromCollectionConverter x:Key="IndexFromCollectionConverter"/>
        <converters:HoutFromTimeSpanConverter x:Key="HoutFromTimeSpanConverter"/>
        <converters:MinutesFromTimeSpanConverter x:Key="MinutesFromTimeSpanConverter"/>
        
    </Application.Resources>

</Application>
